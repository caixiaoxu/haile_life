<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.yunshang.haile_life.business.vm.AppointmentSubmitViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.order.AppointmentSubmitActivity">

        <com.yunshang.haile_life.ui.view.CommonTitleActionBar
            android:id="@+id/bar_appoint_submit_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_action_bar_h"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_appoint_submit_hint"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@{vm.isDryer?@color/color_ffefe6:@color/color_e5fafc}"
            android:gravity="center"
            android:text="@{vm.hint}"
            android:textColor="@{vm.isDryer?@color/color_ff630e:@color/colorPrimary}"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/bar_appoint_submit_title" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toTopOf="@id/view_appoint_submit_bottom"
            app:layout_constraintTop_toBottomOf="@id/tv_appoint_submit_hint">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_appoint_submit_configs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                app:divider="@drawable/divder_efefef"
                app:dividerPadding="12dp"
                app:showDividers="middle">

                <include
                    android:id="@+id/include_appoint_submit_category"
                    layout="@layout/item_scan_order_model"
                    android:visibility="@{(null == vm.categoryList || 0 == vm.categoryList.size())?View.GONE:View.VISIBLE}"
                    app:modelTitle="@{@string/select_category_model}" />

                <include
                    android:id="@+id/include_appoint_submit_spec"
                    layout="@layout/item_scan_order_model"
                    android:visibility="@{(null == vm.selectCategory)?View.GONE:View.VISIBLE}"
                    app:desc="@{vm.selectSpec.feature}"
                    app:modelTitle="@{vm.modelTitle}" />

                <include
                    android:id="@+id/include_appoint_submit_minute"
                    layout="@layout/item_scan_order_model"
                    android:visibility="@{(null == vm.selectCategory)?View.GONE:View.VISIBLE}"
                    app:modelTitle="@{vm.timeTitle}" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_appoint_submit_select_devic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:visibility="@{(null == vm.selectCategory)?View.GONE:View.VISIBLE}">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_appoint_submit_select_device_title"
                        style="@style/Font_14_black_85_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{vm.deviceTitle}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="请选择洗衣设备" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Font_12_black_45"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@mipmap/icon_arrow_right"
                        android:text="@string/please_select"
                        app:layout_constraintBottom_toBottomOf="@id/tv_appoint_submit_select_device_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_appoint_submit_select_device_title"
                        tools:text="请选择" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_appoint_submit_select_device"
                        style="@style/Font_12_black_85"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@{vm.selectDeviceVal}"
                        android:visibility="@{null == vm.selectDevice?View.GONE:View.VISIBLE}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_appoint_submit_select_device_title"
                        tools:text="1号洗衣机排队10人，预计使用时间 今天16:00" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Font_12_black_45"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:text="@string/appoint_submit_prompt" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/view_appoint_submit_bottom"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="@drawable/shape_top_stroke_dividing"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/view_appoint_submit_selected"
            android:layout_width="132dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@{vm.isDryer?@drawable/shape_sff630e_r23:@drawable/shape_s04d1e5_r23}"
            app:layout_constraintEnd_toEndOf="@id/view_appoint_submit_bottom"
            app:layout_constraintTop_toTopOf="@id/view_appoint_submit_bottom" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Font_16_white_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/icon_order_submit_right"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/selected"
            app:layout_constraintBottom_toBottomOf="@id/view_appoint_submit_selected"
            app:layout_constraintEnd_toEndOf="@id/view_appoint_submit_selected"
            app:layout_constraintStart_toStartOf="@id/view_appoint_submit_selected"
            app:layout_constraintTop_toTopOf="@id/view_appoint_submit_selected" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_appoint_submit_price"
            style="@style/Font_20_black_85"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/money"
            android:visibility="@{null == vm.selectDevice?View.GONE:View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/view_appoint_submit_selected"
            app:layout_constraintEnd_toStartOf="@id/view_appoint_submit_selected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_appoint_submit_selected"
            app:layout_constraintVertical_chainStyle="spread"
            app:tMoney='@{vm.selectDevice.price}'
            tools:text="￥ 5.00" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>