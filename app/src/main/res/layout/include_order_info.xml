<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_sffffff_r8"
        android:orientation="vertical"
        app:divider="@drawable/divder_efefef"
        app:dividerPadding="12dp"
        app:showDividers="middle">

        <androidx.appcompat.widget.AppCompatCheckBox
            style="@style/Font_17_black_85"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableEnd="@mipmap/icon_arrow_right"
            android:padding="16dp"
            android:text="@string/order_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Font_20_black_85_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="洗衣中" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Font_14_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableEnd="@mipmap/icon_order_desc_prompt"
                android:drawablePadding="4dp"
                tools:text="预计剩余时间 40分钟" />
        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:divider="@drawable/divide_size8"
            app:showDividers="middle">

            <include
                layout="@layout/include_order_info_item"
                app:canCopy="@{true}"
                app:title='@{@string/order_no1 + "："}'
                app:content='@{"NOWNR124823840293849023"}' />

            <include
                layout="@layout/include_order_info_item"
                app:title='@{@string/outlet + "："}'
                app:content='@{"浙大紫荆港蓝田学生公寓3区1号楼"}' />

            <include
                layout="@layout/include_order_info_item"
                app:title='@{@string/device + "："}'
                app:content='@{"洗衣机名称"}' />

            <include
                layout="@layout/include_order_info_item"
                app:tail='@{"¥6"}'
                app:title='@{@string/service +"："}'
                app:content='@{"标准洗 30分钟"}' />

            <include
                layout="@layout/include_order_info_item"
                app:tail='@{"¥6"}'
                app:title='@{@string/discounts +"："}'
                app:content='@{"限时优惠"}' />

            <include
                layout="@layout/include_order_info_item"
                app:tail='@{"¥6"}'
                app:title='@{""}'
                app:content='@{"限时优惠"}' />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:divider="@drawable/divide_size8"
            app:showDividers="middle">

            <include
                layout="@layout/include_order_info_item"
                app:title='@{@string/total_price + "："}'
                app:content='@{"¥5"}' />

            <include
                layout="@layout/include_order_info_item"
                app:title='@{@string/discount_price + "："}'
                app:content='@{"¥5"}' />

            <include
                layout="@layout/include_order_info_item"
                app:title='@{@string/need_pay + "："}'
                app:content='@{"¥5"}' />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <include
            layout="@layout/include_order_info_item"
            app:title='@{@string/order_time + "："}'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:content='@{"2023/01/28 11:26"}' />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>