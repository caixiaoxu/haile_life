<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
    </data>

    <merge
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yunshang.haile_life.ui.view.CommonTitleActionBar
            android:id="@+id/bar_indicator_list_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_action_bar_h"
            android:background="@color/white" />

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/indicator_indicator_list_status"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:paddingHorizontal="16dp" />

        <com.yunshang.haile_life.ui.view.refresh.CommonRefreshRecyclerView
            android:id="@+id/rv_indicator_list_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp" />
    </merge>
</layout>