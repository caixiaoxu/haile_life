<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp"
    android:paddingTop="24dp"
    android:paddingBottom="32dp"
    tools:context="com.yunshang.haile_manager_android.ui.view.dialog.Hint3SecondDialog">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_hint_3s_dialog_title"
        style="@style/Font_18_333333_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="@string/friendly_reminder"
        app:layout_constraintBottom_toTopOf="@id/tv_hint_3s_dialog_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_hint_3s_dialog_content"
        style="@style/Font_14_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btn_hint_3s_dialog_yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容" />

    <com.lsy.framelib.ui.weight.SingleTapButton
        android:id="@+id/btn_hint_3s_dialog_yes"
        style="@style/CommonMatchBtnStyle1"
        android:layout_width="0dp"
        android:text="@string/i_know"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>