<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.personal.WalletBalanceActivity">

    <com.yunshang.haile_life.ui.view.CommonTitleActionBar
        android:id="@+id/bar_wallet_balance_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_action_bar_h"
        android:background="@color/white"
        app:title="@string/mine_wallet" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_wallet_balance_main" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Font_16_black_85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/wallet_balance" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_wallet_balance_value"
            style="@style/Font_52_black_85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/money"
            tools:text="12.00" />
    </LinearLayout>


</LinearLayout>