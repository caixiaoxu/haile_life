<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.shop.StarfishRefundListActivity">

        <com.yunshang.haile_life.ui.view.CommonTitleActionBar
            android:id="@+id/bar_starfish_refund_list_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_action_bar_h"
            android:background="@color/white"
            app:title="@string/starfish_refund"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_starfish_refund_list_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Font_12_ff630e"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@color/color_appoint_bg"
            android:drawableStart="@mipmap/icon_refund_list_prompt"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:text="@string/refund_list_prompt" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:paddingTop="10dp">

            <com.lsy.framelib.ui.weight.SingleTapButton
                android:id="@+id/btn_starfish_refund_apply"
                style="@style/CommonMatchBtnStyle1"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginHorizontal="16dp"
                android:text="@string/apply_refund" />
        </FrameLayout>
    </LinearLayout>
</layout>