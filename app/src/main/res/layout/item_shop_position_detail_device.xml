<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.yunshang.haile_life.data.entities.ShopPositionDeviceEntity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Font_14_black_65"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{item.name}"
            tools:text="1号楼一号设备" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Font_14_black_65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{1 == item.state?@string/idle:@string/occupy}"
            android:textColor="@{1 == item.state?@color/secondColorPrimary:@color/color_black_85}"
            android:textSize="14sp" />
    </LinearLayout>
</layout>