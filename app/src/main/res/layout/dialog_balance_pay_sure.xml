<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_sffffff_rt8"
    android:paddingTop="12dp"
    android:paddingBottom="34dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_balance_pay_sure_title"
        style="@style/Font_18_black_85_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:text="@string/sure_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.lsy.framelib.ui.weight.SingleTapTextView
        android:id="@+id/btn_balance_pay_sure_cancel"
        style="@style/Font_16_black_65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:padding="10dp"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="@id/tv_balance_pay_sure_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_balance_pay_sure_title" />

    <com.yunshang.haile_life.ui.view.AmountTextView
        android:id="@+id/tv_balance_pay_sure_amount"
        style="@style/Font_32_black_85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_balance_pay_sure_cancel"
        tools:text="4.00" />

    <com.yunshang.haile_life.ui.view.AmountTextView
        style="@style/Font_20_black_85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="@string/unit_money"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_balance_pay_sure_amount"
        app:layout_constraintEnd_toStartOf="@id/tv_balance_pay_sure_amount" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_balance_pay_sure_way_title"
        style="@style/Font_14_black_85"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="@string/model_of_pay"
        app:layout_constraintBottom_toBottomOf="@id/tv_balance_pay_sure_way"
        app:layout_constraintEnd_toStartOf="@id/tv_balance_pay_sure_way"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_balance_pay_sure_way" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_balance_pay_sure_way"
        style="@style/Font_14_black_85_bold"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:text="@string/balance_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_balance_pay_sure_way_title"
        app:layout_constraintTop_toBottomOf="@id/tv_balance_pay_sure_amount" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_balance_pay_sure_balance_title"
        style="@style/Font_14_black_85"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="@string/wallet_balance"
        app:layout_constraintBottom_toBottomOf="@id/tv_balance_pay_sure_balance"
        app:layout_constraintEnd_toStartOf="@id/tv_balance_pay_sure_balance"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_balance_pay_sure_balance" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_balance_pay_sure_balance"
        style="@style/Font_14_black_85_bold"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_balance_pay_sure_balance_title"
        app:layout_constraintTop_toBottomOf="@id/tv_balance_pay_sure_way"
        tools:text="ï¿¥200.01" />

    <com.lsy.framelib.ui.weight.SingleTapButton
        android:id="@+id/btn_balance_pay_sure_pay"
        style="@style/CommonMatchBtnStyle1"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="34dp"
        android:text="@string/pay_now"
        app:layout_constraintTop_toBottomOf="@id/tv_balance_pay_sure_balance" />
</androidx.constraintlayout.widget.ConstraintLayout>