<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="308dp"
        android:layout_height="346dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="312dp"
            android:background="@mipmap/icon_shop_activity_dialog_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="312dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="94dp"
                android:layout_height="18dp"
                android:layout_marginTop="24dp"
                android:src="@mipmap/icon_shop_activity_dialog_title" />

            <com.yunshang.haile_life.ui.view.CustomChildListLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_gravity="bottom"
            android:background="@mipmap/icon_shop_activity_dialog_bottom">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_dialog_shop_activity_get"
                style="@style/Font_17_e84a2b_bold"
                android:layout_width="144dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_shop_activity_btn"
                android:shadowColor="#DB341A"
                android:shadowDx="0"
                android:shadowDy="2"
                android:text="@string/get_now"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_dialog_shop_activity_get_success"
                style="@style/Font_14_ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="34dp"
                android:gravity="center"
                android:text="@string/get_success"
                android:visibility="gone"
                tools:visibility="visible" />
        </FrameLayout>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_dialog_shop_activity_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="16dp"
        android:src="@mipmap/icon_shop_activity_close" />
</LinearLayout>